@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">All Users</h1>
<a asp-action="Create" class="text-white" style="border:3px solid gray; border-radius: 20px; width:200px; padding: 10px; margin-top: 10px; font-size:large;">Create a User</a>

<table class="table table-sm table-bordered text-white" style="margin-top:20px;">
    <tr><th>ID</th><th>Email</th><th>Update</th><th>Delete</th></tr>
    @foreach (ApplicationUser user in Model)
    {
<tr>
    <td>@user.Id</td>
    <td>@user.UserName</td>
    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a></td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>

