@inject SignInManager<ApplicationUser> SignInManager;
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<head>
    <link rel="stylesheet" href="~/css/login.css" />

</head>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p style="font-size: 20px;">Most awesome chit-chat there is.</p>
    @if (SignInManager.IsSignedIn(User))
    {
        <p style="font-size: 20px;">
            Welcome @User.Identity.Name
        </p>

    }
    else
    {
        <p style="font-size: 20px;">
            Create a new account
            <a class="text-white d-inline-block" asp-controller="account" asp-action="register">here</a> or
            <a class="text-white d-inline" asp-controller="account" asp-action="register">login</a>
        </p>
    }

</div>
