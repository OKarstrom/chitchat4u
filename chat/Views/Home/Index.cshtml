@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<head>
    <link rel="stylesheet" href="~/css/login.css" />

</head>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p style="font-size: 20px;">Most awesome chit-chat there is.</p>
    <p style="font-size: 20px;">Create a new account<button onclick="openRegister()" class="button" style="width: auto; color: white; text-decoration: underline;">here</button></p>
    <p style="font-size: 20px;">or<button onclick="document.getElementById('id01').style.display='block'" style="width:auto; color: white; text-decoration: underline;">login</button></p>
</div>
<div id="id01" class="modal">

    <div class="modal-content animate">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
            <img src="~/img/img_avatar.png" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label for="uname"><b>Username</b></label>
            <input id="username" type="text" value="" placeholder="Enter Username" name="uname" required>

            <label for="psw"><b>Password</b></label>
            <input id="password" style="margin-bottom: 40px" type="password" value="" placeholder="Enter Password" name="psw" required>
            <button type="submit" class="loginbtn" onclick="login()">Login</button>
            <br>
            <div style="text-align:center">
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </div>
        </div>

        <div class="container" style="background-color:transparent; margin-top: 80px">
            <p>
                Don't have an account?<button onclick="openRegister()" class="button" style="width: auto; color: white; text-decoration: underline;">Register</button>
                <br>
                <br>
                Forgot<button onclick="forgotPassword()" class="button" style="width: auto; color: white; text-decoration: underline;">password?</button>
            </p>
        </div>
    </div>
</div>

<div id="id02" class="modal">
    <div class="modal-content animate">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
        </div>

        <div class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" required>

            <label for="username"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="username" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" name="psw-repeat" required>
            <hr>
            <p>By creating an account you agree to our<button class="button" style="width: auto; color: white; text-decoration: underline;" onclick="termsPopup()">Terms & Privacy</button></p>

            <button type="submit" class="loginbtn">Register</button>
        </div>

        <div class="container" style="background-color:transparent">
            <p>Already have an account?<button onclick="openSignIn()" class="button" style="width: auto; color: white; text-decoration: underline;">Sign in</button></p>
        </div>

    </div>
</div>

<div id="snackbar">We do not have any Terms & Privacies at this website yet. For more information, please contact our customer service dude: Filip Fredlund!</div>


<script type="text/javascript" src="~/js/login.js"></script>

